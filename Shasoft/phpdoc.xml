<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
    <title>Класс PHP для вывод в консоль цветного текста</title>
    <parser>
        <target>src</target>
    </parser>
    <transformer>
        <target>docs</target>
    </transformer>
    <files>
        <directory>src</directory>
        <ignore>test/*</ignore>
        <ignore>phpdoc.xml</ignore>
    </files>
  <extensions>
    <extension>php</extension>
  </extensions>	
</phpdoc>